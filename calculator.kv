<Button>:
    font_size: 22

<CalcGridLayout>:
    id: calculator
    d_in: input
    d_out: output
    # it is the id where the results will be displayed

    rows: 2
    padding: 0
    spacing: 0

    GridLayout:
        rows: 2
        padding: 5
        spacing: -25
        size_hint: 0.4, 0.4

        BoxLayout:
            TextInput:
                id: input
                # id for input to display on the screen

                font_size: 25
                multiline: False

        BoxLayout:
            TextInput:
                id: output
                font_size: 40
                bold: True
                multiline: False
                halign: 'right'
                # horizontal alignment

                valign: 'center'
                # vertical alignment

    GridLayout:
        rows: 5
        padding: 5
        spacing: 0

        BoxLayout:
            spacing: 0

            Button:
                text: '7'
                on_press: input.text += self.text
                # here, input id of input TextInput
                # += is used to display how many times the button is pressed
                # self.text is the button text
                # self is used because here is multiple buttons

            Button:
                text: '8'
                on_press: input.text += self.text

            Button:
                text: '9'
                on_press: input.text += self.text

            Button:
                text: '+'
                on_press: input.text += self.text

        BoxLayout:
            spacing: 0

            Button:
                text: '4'
                on_press: input.text += self.text

            Button:
                text: '5'
                on_press: input.text += self.text

            Button:
                text: '6'
                on_press: input.text += self.text

            Button:
                text: '-'
                on_press: input.text += self.text

        BoxLayout:
            spacing: 0

            Button:
                text: '1'
                on_press: input.text += self.text

            Button:
                text: '2'
                on_press: input.text += self.text

            Button:
                text: '3'
                on_press: input.text += self.text

            Button:
                text: '*'
                on_press: input.text += self.text

        BoxLayout:
            spacing: 0

            Button:
                text: '0'
                on_press: input.text += self.text

            Button:
                text: '('
                on_press: input.text += self.text

            Button:
                text: ')'
                on_press: input.text += self.text

            Button:
                text: '/'
                on_press: input.text += self.text

        BoxLayout:
            spacing: 0

            Button:
                text: 'AC'
                on_press: input.text = ''

            Button:
                text: 'DEL'
                on_press: calculator.del_btn(input.text)

            Button:
                text: '.'
                on_press: input.text += self.text

            Button:
                text: '='
                on_press: calculator.calculate(input.text)
                # here, calculator is CalcGridLayout class